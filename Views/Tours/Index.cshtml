@model IEnumerable<Kursovaya.Models.Tours>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tour_start_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.end_date_of_the_tour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type_of_tour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.type_of_power_supply)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hotel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.departure_flight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.arrival_flight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tour_start_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.end_date_of_the_tour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type_of_tour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type_of_power_supply)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hotel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departure_flight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrival_flight)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
