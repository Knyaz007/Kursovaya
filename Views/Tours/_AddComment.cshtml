@model Kursovaya.Models.Comment
@*@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@



<form asp-controller="Tours" asp-action="AddComment" method="post">
    <div class="form-group">
        <label asp-for="Commentaryi">Комментарий:</label>
        <textarea class="form-control" asp-for="Commentaryi"></textarea>
    </div>
    <input type="hidden" asp-for="IdTour" value="@Model.IdTour" />

    <button type="submit" class="btn btn-primary">Добавить комментарий</button>
</form>
